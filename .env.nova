# ===========================================
# Amazon Nova服务配置
# ===========================================

# AWS基础配置 - 请替换为真实的AWS凭证
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_REGION=us-east-1
BEDROCK_REGION=us-east-1

# Nova Sonic (语音转文字)
ENABLE_NOVA_SONIC=true
NOVA_SONIC_MODEL_ID=amazon.nova-lite-v1:0
TRANSCRIBE_LANGUAGE=zh-CN
MAX_AUDIO_SIZE=25
NOVA_TIMEOUT_MS=300000

# Nova Canvas (图片生成)
ENABLE_NOVA_CANVAS=true
NOVA_CANVAS_MODEL_ID=amazon.nova-canvas-v1:0
NOVA_DEFAULT_STYLE=abstract
NOVA_IMAGE_WIDTH=512
NOVA_IMAGE_HEIGHT=512
NOVA_IMAGE_QUALITY=premium
NOVA_MAX_IMAGES=3

# 服务开关
FALLBACK_TO_LOCAL=true
ENABLE_HEALTH_CHECK=true

# S3存储配置
AWS_S3_BUCKET_NAME=vomage-production-storage
AWS_S3_REGION=us-east-1
AWS_S3_AUDIO_BUCKET=vomage-audio-files
AWS_S3_IMAGE_BUCKET=vomage-generated-images
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# ===========================================
# 使用说明
# ===========================================
# 1. 替换 YOUR_AWS_ACCESS_KEY_ID 为真实的AWS Access Key ID
# 2. 替换 YOUR_AWS_SECRET_ACCESS_KEY 为真实的AWS Secret Access Key
# 3. 确保AWS账户有以下权限:
#    - bedrock:InvokeModel (用于Nova服务)
#    - transcribe:StartTranscriptionJob
#    - transcribe:GetTranscriptionJob
#    - s3:PutObject
#    - s3:GetObject
# 4. 创建对应的S3存储桶
# 5. 将此文件内容合并到 .env.production 中
